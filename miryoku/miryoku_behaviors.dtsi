/ {
  behaviors {
    u_mt: u_mt {
      compatible = "zmk,behavior-hold-tap";
      label = "u_mt";
      #binding-cells = <2>;
      tapping_term_ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      quick-tap-ms = <U_QUICK_TAP>;
      global-quick-tap;
      bindings = <&kp>, <&kp>;
    };
    u_lt: u_lt {
      compatible = "zmk,behavior-hold-tap";
      label = "u_lt";
      #binding-cells = <2>;
      tapping_term_ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      quick-tap-ms = <U_QUICK_TAP>;
      global-quick-tap;
      bindings = <&mo>, <&kp>;
    };
    tdto_q_switch: tdto_q_switch {
      compatible = "zmk,behavior-tap-dance";
      label = "tdto_q_switch";
      #binding-cells = <0>;
      tapping-term-ms = <U_QUICK_TAP>;
      bindings = <&kp Q>, <&to U_SWITCH>;
    };        
    tdto_base: tdto_base {
      compatible = "zmk,behavior-tap-dance";
      label = "tdto_base";
      #binding-cells = <0>;
      tapping-term-ms = <U_QUICK_TAP>;
      bindings = <&none>, <&to U_BASE>;
    };        
    tdto_v_plain: tdto_v_plain {
      compatible = "zmk,behavior-tap-dance";
      label = "tdto_v_plain";
      #binding-cells = <0>;
      tapping-term-ms = <U_QUICK_TAP>;
      bindings = <&kp V>, <&to U_PLAIN>;
    };
  };
};

/ {
    macros {
        dbl_arrow: dbl_arrow {
            label = "dbl_arrow";
            compatible = "zmk,behavior-macro";
            wait-ms = <0>;
            tap-ms = <0>;
            #binding-cells = <0>;
            bindings = <&macro_tap &kp EQUAL &kp GREATER_THAN>;
        };
        mkd_code: mkd_code {
            label = "mkd_code";
            compatible = "zmk,behavior-macro";
            wait-ms = <0>;
            tap-ms = <0>;
            #binding-cells = <0>;
            bindings = <&macro_tap &kp GRAVE &kp GRAVE &kp GRAVE>;
        };
    };
};

